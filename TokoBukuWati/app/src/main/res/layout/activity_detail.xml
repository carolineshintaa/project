<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    tools:context=".DetailActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="300dp"
                android:padding="20dp"
                android:adjustViewBounds="true"
                android:id="@+id/img_Buku"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/img_Buku"
                android:id="@+id/tv_Buku"
                android:text="Judul"
                android:textSize="24dp"
                android:textColor="@android:color/black"
                android:layout_marginStart="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/img_Buku"
                android:layout_below="@id/tv_Buku"
                android:id="@+id/tv_namapenulis"
                android:text="Pengarang"
                android:layout_marginStart="16dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/img_Buku"
                android:layout_below="@id/tv_namapenulis"
                android:id="@+id/tv_harga"
                android:text="Rp. "
                android:layout_marginStart="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_Buku"
                android:paddingTop="20dp"
                android:text="Deskripsi"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                android:id="@+id/tv_dede"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_dede"
                android:paddingTop="20dp"
                android:text="Deskripsi detail"
                android:textSize="20sp"
                android:id="@+id/tv_deskripsi"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_deskripsi"
                android:layout_marginTop="20dp"
                android:text="BELI SEKARANG!"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="@android:color/black"/>

    </RelativeLayout>



</ScrollView>